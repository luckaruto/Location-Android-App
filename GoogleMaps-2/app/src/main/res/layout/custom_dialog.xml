<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_with_16dp"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Chuyển sang chế độ chạy bộ!"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/custom_head_dialog"
        android:textSize="18dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hãy chọn xác nhận nếu bạn muốn chuyển sang chế độ chạy bộ!"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No, thanks!"
                android:layout_margin="5dp"
                android:backgroundTint="@color/darkGrey"
                android:id="@+id/cancelBtn"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Xác nhận!"
                android:layout_margin="5dp"
                android:backgroundTint="@color/green1"
                android:id="@+id/acceptBtn"/>
            
        </LinearLayout>
    </LinearLayout>




</LinearLayout>