<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    >

    <TextView
        android:id="@+id/chat_message_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentTop="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true">



        <TextView
            android:id="@+id/tv_chat_time_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toEndOf="@id/chat_message_message"
            android:layout_centerVertical="true"
            android:layout_marginStart="7dp"
            android:textSize="12sp"
            android:text=""
            android:textColor="@color/white"
            android:alpha="0.5"/>
        <TextView
            android:id="@+id/chat_message_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/background_right_receiver"
            android:maxWidth="270dp"
            android:padding="14dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp" />
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ImageMsg"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="08dp"
            android:layout_marginStart="51dp"
            android:visibility="invisible"
            app:riv_corner_radius="15dp"
            app:riv_border_width="0.5dip"
            />



    </LinearLayout>
</RelativeLayout>